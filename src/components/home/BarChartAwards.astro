<style>
  .animation__to-up {
    view-timeline-name: --to-up;
    view-timeline-axis: block;

    animation-timeline: --to-up;
    animation-name: to-up;

    animation-range: entry 20% cover 40%;
    animation-fill-mode: both;
  }

  @keyframes to-up {
    from {
      transform: translateY(100%);
    }
    to {
      transform: translateY(0);
    }
  }
</style>
