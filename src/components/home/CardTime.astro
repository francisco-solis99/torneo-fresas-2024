---
interface Props {
  title: string;
  copy: string;
  time: string;
}

const { title, copy, time } = Astro.props;
---

<article
  class="bg-gradient-to-b from-color-accent to-black rounded-lg shadow-sm shadow-white p-4 xs:p-7"
>
  <h3 class="flex flex-col mb-3 space-y-2">
    <strong class="text-xl xs:text-2xl">{time}</strong>
    <span class="text-lg xs:text-xl text-red-300">{title}</span>
  </h3>
  <p class="text-gray-200">{copy}</p>
</article>
