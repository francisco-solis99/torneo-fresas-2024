---
interface Props {
  title: string;
  copy: string;
  time: string;
}

const { title, copy, time } = Astro.props;
---

<article class="px-4 xs:px-7 border-x-4 border-white">
  <h3 class="flex flex-col mb-3 space-y-2">
    <strong class="text-2xl xs:text-3xl">{time}</strong>
    <span class="text-xl xs:text-2xl text-primary">{title}</span>
  </h3>
  <p class="text-gray-200">{copy}</p>
</article>
